<div class="container desc-container">
    <div class="row" style="background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)) ,url(/images/{{product.id}}-bg.jpg); background-size: 100% 100%; padding-top: 50px"> 
        <div class="description col-md-3">
            <img class="desc-image mt-4"  src="/images/{{product.id}}.jpg" alt="{{product.title}}">
        </div>
        <div class="prod-description col-md mt-4">
            <h2 class="text-white">{{product.title}}</h2>
            <p class="text-white">{{product.description}}</p>
            <button type="button" class="btn btn-primary ">Buy: ${{product.sellPrice}}</button>
            <button type="button" class="btn btn-primary ">Rent: ${{product.rentPrice}}</button>
        </div>
    </div>
</div>
