<form class="container form-container mt-5 text-white" action="/register" method="POST">
    <h1 class="h3 mb-3 pt-5 fw-normal text-center">Please Register</h1>
    <div class="sign-in-form my-3">
        <label for="registerEmail">Email address</label>
        <input id="registerEmail" class="form-control" placeholder="Email address" name="registerEmail" value="{{email}}" autofocus>
        <div class="text-white">{{emailError}}</div>
    </div>
    <div class="sign-in-form my-3">
        <label for="registerPassword">Password</label>
        <input type="password" id="registerPassword" class="form-control" placeholder="Password(6-12 characters, can only have letters and numbers)" name="registerPassword" value="{{password}}">
        <div class="text-white">{{passwordError}}</div>
    </div>
    <div class="sign-in-form my-3">
        <label for="registerName">Full Name</label>
        <input type="text" id="registerName" class="form-control" placeholder="Full Name" name="registerName" value="{{name}}">
        <div class="text-white">{{nameError}}</div>
    </div>

    <div class="row">
        <div class="form-group col">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="male" value="male" checked>
                <label class="form-check-label" for="male">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="female" value="female">
                <label class="form-check-label" for="female">Female</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="other" value="other">
                <label class="form-check-label" for="other">Other</label>
            </div>
        </div>
    </div>

    <div class="sign-in-form my-3">
        <label for="registerAddress">Address</label>
        <input type="address" id="registerAddress" class="form-control" placeholder="Address" name="registerAddress" value="{{address}}">
        <div class="text-white">{{addressError}}</div>
    </div>

    <div class="row">
        <div class="form-group col">
            <label for="registerCity">City</label>
            <input class="form-control" list="registerCity" autocomplete="address-level2" name="registerCity" value="{{city}}">
            <div class="text-white">{{cityError}}</div>
            <datalist id="registerCity">
                <option>Toronto</option>
                <option>Vancouver</option>
                <option>Montreal</option>
                <option>Victoria</option>
                <option>Halifax</option>
                <option>Calgary</option>
                <option>Ottawa</option>
                <option>Edmonton</option>
                <option>Mississauga</option>
                <option>Winnipeg</option>
                <option>Quebec City</option>
            </datalist>
        </div>
        <div class="form-group col">
            <label for="registerPostalCode">Postal Code</label>
            <input class="form-control" name="registerPostalCode" id="registerPostalCode" autocomplete="postal-code" type="text"
                placeholder="A1A 2B2" value="{{postalCode}}">
            <div class="text-white">{{postalCodeError}}</div>
        </div>
        <div class="sign-in-form my-3">
            <label for="registerPhone">Phone Number(Optional)</label>
            <input type="text" id="registerPhone" class="form-control" placeholder="Phone Number" name="registerPhone" value="{{phone}}">
        </div>
        <div class="d-flex flex-row-reverse mt-3">
            <input class="btn btn-primary" type="submit" name="submit" value="Submit">
            <input class="btn btn-success mr-4" type="reset" name="reset" value="Reset">
        </div>
        <a href="/signIn" class="register-link text-white">Sign In</a><br>
    </div>
</form>