<div class="dashBoard container">
    <div class="row">
        {{> adminDashboardNav}}

        <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2 text-white">Products List</h1>
            </div>

            <div>
                <table class="table table-dark table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Category</th>
                            <th scope="col">Rate</th>
                            <th scope="col">Sell Price</th>
                            <th scope="col">Rent Price</th>
                            <th scope="col">Featured</th>
                            <th class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.category}}</td>
                            <td>{{this.rating}}</td>
                            <td>{{this.sellPrice}}</td>
                            <td>{{this.rentPrice}}</td>
                            <td>{{this.isFeatured}}</td>
                            <td>
                                <a href="/editProduct/{{this._id}}">
                                    <button class="btn btn-primary badge-pill" style="width:80px;">Edit</button>
                                </a>
                                <a href="/delete/{{this._id}}?method=DELETE">
                                    <button class="btn btn-danger badge-pill" style="width:80px;">Delete</button>
                                </a>
                            </td>
                        </tr>
                        {{else}}
                        <td colspan="8">
                            <p>No product in database</p>
                        </td>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>