<div id="carouselExampleControlsNoTouching" class="container carousel slide slide-show" data-bs-touch="false"
    data-bs-interval="false">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/images/slider1.jpg" class="d-block w-100 img-fluid" alt="wanda-vision">
        </div>
        <div class="carousel-item">
            <img src="/images/slider2.jpg" class="d-block w-100" alt="tenet">
        </div>
        <div class="carousel-item">
            <img src="/images/slider3.jpg" class="d-block w-100" alt="wonder-woman">
        </div>
        <div class="carousel-item">
            <img src="/images/slider4.jpg" class="d-block w-100" alt="the-croods-a-new-age">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="container">
    <!-- Featured movies start -->
    <h2 class="text-white" id="prod-slider">Featured Movies</h2>
    <div class="swiper-container">
        <div class="swiper-wrapper">
            {{#each filteredFeaturedMovies}}
                <a class="swiper-slide" href="/products/{{this._id}}" style="background-image:url(/uploads/{{this.smallPoster}})"></a>
            {{/each}}
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
    </div>
    <!-- Featured movies end -->

    <!-- Featured TV shows start -->
    <h2 class="text-white" id="prod-slider">Featured TV Shows</h2>
    <div class="swiper-container">
        <div class="swiper-wrapper">
            {{#each filteredFeaturedShows}}
                <a class="swiper-slide" href="/products/{{this._id}}" style="background-image:url(/uploads/{{this.smallPoster}}); background-size: 100% 100%"></a>
            {{/each}}
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
    </div>
    <!-- Featured TV shows end -->
</div>

<div class="container">
    <!-- Content Start -->
    <h2 class="text-white" id="grid-name">Great Deals</h2>
    <hr>
    <div class="row">
        <!-- Deals -->
        {{#each deals}}
        <div class="col-md-2 product-grid">
            <div class="image">
                <a href="#">
                    <img src="images/{{this.title}}.jpg" class="w-100" alt="{{this.title}}">
                    <div class="overlay">
                        <div class="detail">View Details</div>
                    </div>
                </a>
            </div>
        </div>
        {{/each}}
        <!-- ./Deals -->
    </div>
    <!-- Content End -->
</div>